FROM node:14 AS build-stage

WORKDIR /app

# copy frontend folder to /app
COPY . /app

#install dependencies
RUN yarn install

#build production app
RUN yarn run build:development

# FROM nginx:alpine
from caddy:alpine

COPY --from=build-stage /app/build /usr/share/caddy/html
COPY --from=build-stage /app/.config/Caddyfile /etc/caddy/Caddyfile

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
